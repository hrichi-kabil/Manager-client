{% extends 'base.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
	<h1>Client index</h1>


	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>NameClient</th>
				<th>PhoneClient</th>
				<th>MailClient</th>
				<th>Show</th>
				<th>Edit</th>

			</tr>
		</thead>
		<tbody>
			{% for client in clients %}
				<tr>
					<td>{{ client.id }}</td>
					<td>{{ client.nameClient }}</td>
					<td>{{ client.phoneClient }}</td>
					<td>{{ client.mailClient }}</td>
					<td>
						<a href="{{ path('client_show', {'id': client.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('client_edit', {'id': client.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			</td>
		</tbody>
	</tr>
{% else %}
	<tr>
		<td colspan="5">no records found</td>
	</tr>
{% endfor %}</tbody></table><a class="btn btn-success" href="{{ path('client_new') }}"><i class="fas fa-user-plus"></i></a>{% endblock %}
